pipeline {
  agent any
  stages{
    stage('checkout') {
      steps {
        checkout scm
      }
    }
    stage('terraform') {
      steps {
        sh 'cd ./terraform terraform init'
      }
    }
    stage('Terraform Plan') { 
      steps {
        sh ' cd ./terraform terraform plan -no-color -out=create.tfplan' 
      }
    }
  }
}